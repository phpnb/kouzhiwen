<script type="text/javascript">
  $('#time-start').datetimepicker({
    format: 'yyyy-mm-dd',
    language:'zh-CN',
    minView:2,
    autoclose:true
});

$('#time-end').datetimepicker({
    format: 'yyyy-mm-dd',
    language:'zh-CN',
    minView:2,
    autoclose:true
});
  function all_export(url,id, fn) {
      // 组合批量操作的ID
      location.href=url+"?exl=exl&id="+id;
