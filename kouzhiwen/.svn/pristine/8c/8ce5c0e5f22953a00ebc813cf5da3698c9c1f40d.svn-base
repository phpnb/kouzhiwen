{include file="admin/root/common/header"}
<div id="right_content">
    <div class="top-info">
        <i class="glyphicon glyphicon-home"></i>
        阅卷管理
    </div>

    <!-- 菜单 -->
    <ul class="clearfix menu">
        <li><a href="{:url('',['type'=>1])}" {if($type==1)}class="this"{/if}>班级考试</a></li>
        <li><a href="{:url('',['type'=>2])}" {if($type==2)}class="this"{/if}>专业考试</a></li>
    </ul>

    <div class="table-box">
        <div class="table-header clearfix">
            <form action="" method="get" class="clearfix fr">
                <input type="hidden" value="{$type}" name="type" >
                <input type="text" value="{$keywords}" name="keywords" class="form-control search-in" placeholder="标题">
                <button onclick="loding();" type="submit" class="btn btn-info btn-sm fl">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </form>
        </div>

        <table class="table">
            <tr>
                <th>ID</th>
                <th>标题</th>
                <th>图片</th>
                <th>题数量</th>
                <th>考试时间(分钟)</th>
                <th>满分</th>
                <th>及格</th>
                <th>开始时间</th>
                <th>结束时间</th>

                <th width="100">操作</th>
            </tr>
            {if (!empty($data))}
            {foreach $data AS $v}
                <tr>
                    <td>{$v.id}</td>
                    <td>{$v.title}</td>
                    <td><img src='{$v.photo}' style='max-width:100px;'></td>
                    <td>{$v.number}</td>
                    <td>{$v.time}</td>
                    
                    <td>{$v.full}</td>
                    <td>{$v.pass}</td>
                    <td>{$v.start_time}</td>
                    <td>{$v.end_time}</td>

                    <td class="operation">
                        <a href="{:url('paper_user',['id'=>$v['id']])}" target="frame_dispose"
                        onclick="open_frame('修改数据', 100, 100, true)"
                        class="glyphicon glyphicon-edit" title="编辑"></a>

                    </td>
                </tr>
            {/foreach}
            {/if}
        </table>
        <div>{$page}</div>
    </div>
</div>

<script type="text/javascript">

</script>
{include file="admin/root/common/footer"}