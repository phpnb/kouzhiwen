        <table class="table">
            <tr>
                <th width="20">序号</th>
                <th width="200">班级名称</th>
                <th width="200">图片</th>
                <th width="100">创建时间</th>
                <th width="100">操作</th>
            </tr>
            <!-- </table>-->
            {if (!empty($data))}
            {foreach $data AS $k=>$v}
            <tr>
                <td width="20">{$k+1}</td>
                <td width="200">
                    {$v.name}
                </td>
                <td>
                    <img src='{$v.photo}' style='max-width:100px;'>
                </td>
                <td width="100" class="operation">
                    {:date('Y-m-d H:i:s', $v.created_at)}
                </td>
                <td>
                    <a href="{:url('courseany',['uid'=>$age['uid'],'cid'=>$v.id])}" target="frame_dispose"
                       onclick="open_frame('课程进度', 100, 100, true)"
                       class="glyphicon glyphicon-list-alt" title="课程进度"></a>
                </td>
            </tr>
            {/foreach}
            {else}
            <tr>
                <td align="center" colspan="20">暂无数据！</td>
            </tr>
            {/if}
        </table>
