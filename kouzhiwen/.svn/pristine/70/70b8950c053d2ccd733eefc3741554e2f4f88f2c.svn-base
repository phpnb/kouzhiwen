{include file="admin/root/common/header"}
        </div>

        <table class="table">
            <tr>
                <th width="20">
                    <input onclick="check_all('id[]');" name="check_all" type="checkbox" value="">
                </th>
                <th>ID</th>
                <th>名称</th>
                <th>发表者</th>
                <th width="100">操作</th>
            </tr>
            {if (!empty($data))}
            {foreach $data AS $v}
            <tr>
                <td>
                    <input name="id[]" type="checkbox" value="{$v.id}">
                </td>
                <td>{$v.id}</td>
                <td>{$v.contents}</td>
                <td>{$v.name}</td>
                <td class="operation">
                    <a href="{:url('edit',['id'=>$v['id']])}" target="frame_dispose"
                       onclick="open_frame('查看', 100, 100, true)"
                       class="glyphicon glyphicon-search" title="查看"></a>
                    <a href="{:url('sauta',['id'=>$v['id'],'uid'=>$v['uid']])}" target="frame_dispose"
                       onclick="open_frame('确定', 100, 100, true)"
                       class="glyphicon glyphicon-user" title="确定"></a>
                </td>
            </tr>
            {/foreach}
            {/if}
        </table>
        <div>{$page}</div>
    </div>
</div>
