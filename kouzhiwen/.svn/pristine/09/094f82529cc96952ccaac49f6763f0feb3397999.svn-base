{include file="admin/root/common/header"}
<div id="right_content">
    <div class="top-info">
        <i class="glyphicon glyphicon-home"></i>
        热点管理
    </div>

    <!-- 菜单 -->
    <ul class="clearfix menu">
        <li><a href="#" class="this">数据列表</a></li>
        <li>
            <a
                href="{:url('addt')}" target="frame_dispose"
                onclick="open_frame('添加', 100, 100, true);">
                添加数据
            </a>
        </li>

    </ul>

    <div class="table-box">
        <div class="table-header clearfix">
            <div class="all-operation fl clearfix">
                <button type="button" class="btn btn-danger btn-sm"
                onclick="all_operation('{:url('delt')}','id[]');">
                    删除<i class="glyphicon glyphicon-trash ml5"></i>
                </button>
            </div>
            <form action="" method="get" class="clearfix fr">
                <input type="text" value="{$keywords}" name="keywords" class="form-control search-in" placeholder="标题">
                <button onclick="loding();" type="submit" class="btn btn-info btn-sm fl">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </form>
        </div>

        <table class="table">
            <tr>
                <th width="20">
                    <input onclick="check_all('id[]');" name="check_all" type="checkbox" value="">
                </th>
                <th>ID</th>
                <th>标题</th>
                <th>班级/研究动态</th>
                <th>图片</th>
                <th>评论总数</th>
                <th>浏览量</th>
                <th>添加时间</th>

                <th width="100">操作</th>
            </tr>
            {if (!empty($data))}
            {foreach $data AS $v}
                <tr>
                    <td>
                        <input name="id[]" type="checkbox" value="{$v.id}">
                    </td>
                    <td>{$v.id}</td>
                    <td>{$v.name}</td>
                    <td>{$v.banji}</td>
                    <td><img src='{$v.cover_img}' style='max-width:100px;'></td>
                    <td>{$v.comment_num}</td>
                    
                    <td>{$v.pv}</td>
                    <td>{$v.add_time ? date('Y-m-d', $v.add_time) : '----'}</td>

                    <td class="operation">
                        <a href="{:url('editt',['id'=>$v['id']])}" target="frame_dispose"
                        onclick="open_frame('修改数据', 100, 100, true)"
                        class="glyphicon glyphicon-edit" title="编辑"></a>
                        <!-- <a href="{:url('user',['id'=>$v['id']])}" target=""
                           onclick="open_frame('班级成员', 100, 100, true)"
                           class="glyphicon glyphicon-user" title="班级成员"></a> -->
<a class="glyphicon glyphicon-trash"
                        onclick="ajax_post('{:url('delt')}',{'id':{$v['id']}});" title="删除"></a>

                    </td>
                </tr>
            {/foreach}
            {/if}
        </table>
        <div>{$page}</div>
    </div>
</div>

<script type="text/javascript">

</script>
{include file="admin/root/common/footer"}